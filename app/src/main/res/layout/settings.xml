<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tomas_vycital.eet.android_app.settings.SettingsFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/save"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Uložit"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/heading"
                android:text="Záhlaví účtenky"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                />
            <EditText
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:ems="10"
                android:inputType="textMultiLine"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/footing"
                android:text="Zápatí účtenky"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                />
            <EditText
                android:id="@+id/footing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:ems="10"
                android:inputType="textMultiLine"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0,1"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:labelFor="@+id/dic"
                        android:text="DIČ"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        />
                    <EditText
                        android:id="@+id/dic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:maxLines="1"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:labelFor="@+id/receipt_width"
                        android:text="Šířka účtenky"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        />
                    <EditText
                        android:id="@+id/receipt_width"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="počet znaků pro zarovnání"
                        android:inputType="number"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:labelFor="@+id/id_pokl"
                        android:text="ID pokladny"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        />
                    <EditText
                        android:id="@+id/id_pokl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint=""
                        android:inputType="text"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:labelFor="@+id/id_provoz"
                        android:text="ID provozu"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        />
                    <EditText
                        android:id="@+id/id_provoz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint=""
                        android:inputType="text"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:labelFor="@+id/server"
                        android:text="Server"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        />
                    <RadioGroup
                        android:id="@+id/server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <RadioButton
                            android:id="@+id/server_play"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Playground"
                            />
                        <RadioButton
                            android:id="@+id/server_prod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Produkční"
                            />
                    </RadioGroup>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:labelFor="@+id/verifying"
                        android:text="Ověřovací mód"
                        android:textAppearance="@android:style/TextAppearance.Material.Title"
                        />
                    <Switch
                        android:id="@+id/verifying"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Kódování"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/codepage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    />
                <RadioGroup
                    android:id="@+id/charset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/charset_ascii"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ASCII"
                        />
                    <RadioButton
                        android:id="@+id/charset_utf8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UTF-8"
                        />
                    <RadioButton
                        android:id="@+id/charset_iso88592"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ISO-8859-2"
                        />
                    <RadioButton
                        android:id="@+id/charset_cp852"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CP-852"
                        />
                    <RadioButton
                        android:id="@+id/charset_windows1250"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Windows-1250"
                        />
                </RadioGroup>
                <Button
                    android:id="@+id/codepage_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Vytisknout test"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Klíč"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                />
            <TextView
                android:id="@+id/nokeys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="Vložte svůj klíč (soubor .p12) do složky „EET Keys“ v úložišti telefonu."
                />
            <RadioGroup
                android:id="@+id/keys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:visibility="gone"
                >
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</LinearLayout>